<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Whatsapp</title>

  <style>
    * {
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background: linear-gradient(135deg, #f3f4f6, #dbeafe);
      margin: 0;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h3 {
      font-size: 1.8rem;
      color: #1e3a8a;
      margin-bottom: 1.5rem;
      text-align: center;
      font-weight: 600;
    }

    .top-bar {
      display: flex;
      justify-content: center;
      width: 100%;
      margin-bottom: 2rem;
    }

    .top-bar form button {
      background: #3b82f6;
      color: white;
      border: none;
      padding: 0.8rem 1.6rem;
      border-radius: 0.6rem;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }

    .top-bar form button:hover {
      background: #2563eb;
      transform: scale(1.03);
    }

    .chat {
      background: white;
      width: 90%;
      max-width: 500px;
      padding: 1.2rem 1.5rem;
      border-radius: 1rem;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
      margin-bottom: 1.5rem;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .chat:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 22px rgba(0, 0, 0, 0.1);
    }

    .chat p {
      margin: 0.3rem 0;
      font-size: 0.95rem;
      color: #374151;
    }

    .chat i {
      color: #2563eb;
      font-style: normal;
      font-weight: 500;
    }

    .msg {
      background: #f9fafb;
      padding: 0.8rem 1rem;
      border-radius: 0.6rem;
      margin: 0.6rem 0 0.8rem;
      position: relative;
    }

    .msg p {
      margin-bottom: 0.8rem;
      font-size: 0.95rem;
      color: #111827;
    }

    .msg form {
      display: inline-block;
      margin-right: 0.5rem;
    }

    .msg button {
      background: #3b82f6;
      color: white;
      border: none;
      padding: 0.4rem 0.9rem;
      border-radius: 0.4rem;
      font-size: 0.85rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .msg button:hover {
      background: #2563eb;
    }

    .msg form:last-child button {
      background: #ef4444;
    }

    .msg form:last-child button:hover {
      background: #dc2626;
    }

    .timestamp {
      font-size: 0.8rem;
      color: #6b7280;
      margin-top: 0.4rem;
    }
  </style>
</head>
<body>
  <h3>All Chats</h3>

  <div class="top-bar">
    <form action="/chats/new" method="get">
      <button>+ New Chat</button>
    </form>
  </div>

  <% for(let chat of chats) { %>
    <div class="chat">
      <p><strong>From:</strong> <i><%= chat.from %></i></p>

      <div class="msg">
        <p><%= chat.msg %></p>

        <form method="get" action="/chats/<%= chat._id %>/edit">
          <button>Edit</button>
        </form>

        <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
          <button>Delete</button>
        </form>
      </div>

      <p><strong>To:</strong> <i><%= chat.to %></i></p>

      <div class="timestamp">
        <%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %> |
        <%= chat.created_at.toString().split(" ")[4] %>
      </div>
    </div>
  <% } %>
</body>
</html>
